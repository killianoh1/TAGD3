<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tagd.tagd.MenuActivity">


    <Button
        android:id="@+id/createGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Create New Game" />

    <Button
        android:id="@+id/joinGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/createGameBtn"
        android:layout_alignLeft="@+id/createGameBtn"
        android:layout_alignRight="@+id/createGameBtn"
        android:layout_alignStart="@+id/createGameBtn"
        android:layout_below="@+id/createGameBtn"
        android:layout_marginTop="43dp"
        android:text="Join Game" />

    <Button
        android:id="@+id/currentGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/joinGameBtn"
        android:layout_alignLeft="@+id/joinGameBtn"
        android:layout_alignRight="@+id/joinGameBtn"
        android:layout_alignStart="@+id/joinGameBtn"
        android:layout_below="@+id/joinGameBtn"
        android:layout_marginTop="36dp"
        android:text="Current Game" />








</RelativeLayout>
