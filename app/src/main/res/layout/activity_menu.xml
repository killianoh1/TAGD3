<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tagd.tagd.MenuActivity"
    android:background="@color/colorPrimaryDark">



    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/qrCodeBtn"
        android:layout_marginTop="58dp"
        android:text="New Game" />

    <Button
        android:id="@+id/accountBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startGameBtn"
        android:layout_marginTop="21dp"
        android:text="Account" />

    <Button
        android:id="@+id/currentGameBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accountBtn"
        android:layout_marginTop="84dp"
        android:text="Current Game" />

    <Button
        android:id="@+id/qrCodeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:text="Scanner"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="339dp" />










</RelativeLayout>
